<%= turbo_stream.append "received_friends" do %>
  <%= render partial: "pages/friend", collection: @invitations %>
<% end %>

<% if @next_page.present? %>
  <%= turbo_stream.replace "load_more" do %>
      <%= turbo_frame_tag "load_more", src: invitations_path(page: @next_page, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% end %>

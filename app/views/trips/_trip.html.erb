<div class='trip_item col-lg-3 col-5' style="background-image: url(<%= image_path trip.photo_url unless trip.photo_url.nil? %>)">
  <%= link_to trip_path(trip), data: { turbo: false } do %>
    <div class="trip_card_filter">
      <h5 class='trip_title_index'><%= trip.name %></h5>
      <p class='date_trip_info'>FROM <%= trip.start_date.strftime('%d-%m-%Y') %> - UNTIL <%= trip.end_date.strftime('%d-%m-%Y') %></p>
      <p class='participant_trip_info'><%= trip.participants.count %> <%= 'participant'.pluralize(trip.participants.count).upcase %></p>
    </div>
  <% end %>
</div>

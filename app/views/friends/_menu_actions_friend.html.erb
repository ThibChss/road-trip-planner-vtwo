  <div class='menu_friend_button_container'
        data-action='click->actions-friends#displayMenu'>
    <span class="material-symbols-outlined menu_friend_button">more_vert</span>
  </div>

  <div class="menu_actions_friends" data-actions-friends-target='menu'>
    <span><span class="material-symbols-outlined">chat</span> Send a message</span>
    <% if current_user.friend?(friend) %>
      <%= link_to remove_mutual_friendship_path(user_id: current_user.id, friend_id: friend.id), data: { turbo_method: :delete } do %>
        <span><span class="material-symbols-outlined">person_remove</span> Remove friend</span>
      <% end %>
    <% end %>
    <span><span class="material-symbols-outlined">block</span> Block</span>
  </div>

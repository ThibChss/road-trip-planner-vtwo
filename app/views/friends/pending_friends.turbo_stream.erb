<%= turbo_stream.append "pending_friends" do %>
  <%= render partial: "friends/friend", collection: @friends %>
<% end %>

<% if @next_page.present? %>
  <%= turbo_stream.replace "load_more" do %>
    <%= turbo_frame_tag "load_more", src: pending_friends_path(page: @next_page, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% end %>
